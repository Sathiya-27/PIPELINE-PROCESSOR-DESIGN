module instr_mem (
    input [3:0] pc,
    output reg [15:0] instr
);
    reg [15:0] memory [0:15];

    initial begin
        memory[0] = 16'b0001000100100011; // ADD
        memory[1] = 16'b0010001101000100; // SUB
        memory[2] = 16'b0011000000000101; // LOAD
    end

    always @(*) begin
        instr = memory[pc];
    end
endmodule
